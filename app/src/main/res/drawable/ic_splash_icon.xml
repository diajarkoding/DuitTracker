<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black circle background (neobrutalism style) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/neo_pure_black" />
            <size
                android:width="108dp"
                android:height="108dp" />
        </shape>
    </item>
    
    <!-- Money symbol - Yellow on black -->
    <item
        android:drawable="@drawable/ic_splash_money_light"
        android:gravity="center"
        android:width="56dp"
        android:height="56dp" />
</layer-list>
